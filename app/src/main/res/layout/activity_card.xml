<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.CardActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/layoutEng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layoutTr"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="150dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/engWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdasdasd"
                android:textAlignment="center"
                android:textColor="@color/engWord"
                android:textSize="44dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:id="@+id/trWord1"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/trWord"
                android:layout_height="wrap_content"
                android:text="asdasdasd"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/trWord2"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/trWord"
                android:layout_height="wrap_content"
                android:text="asdasdasd"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/trWord3"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/trWord"
                android:layout_height="wrap_content"
                android:text="asdasdasd"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/trWord4"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/trWord"
                android:layout_height="wrap_content"
                android:text="asdasdasd"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/trWord5"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/trWord"
                android:layout_height="wrap_content"
                android:text="asdasdasd"
                android:textAlignment="center" />
        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:text="Kaydet"
            android:textSize="18dp"
            android:background="@drawable/menu_buton_animate"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="1" />

        <Button
            android:textColor="#fff"
            android:id="@+id/btnShow"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:text="GÃ¶ster"
            android:background="@drawable/menu_buton_animate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="1" />
    </LinearLayout>
    <Button
        android:textColor="#fff"
        android:textSize="19dp"
        android:id="@+id/btnNext"
        android:textAllCaps="false"
        android:text="Sonraki Kelime"
        android:layout_marginTop="16dp"
        android:background="@drawable/menu_buton_animate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
         />
    <com.google.android.gms.ads.AdView
        android:layout_marginTop="24dp"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7450156975867757/1317043846"
        android:layout_centerHorizontal="true" />


</LinearLayout>